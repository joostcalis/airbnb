<section class="table">
	<div class="row">
		<!-- Begin kolom Reservations -->
		<div class="col-md-6 padding">
			<h2>My Profile</h2>
			<img class="profile_picture" src="https://d22r54gnmuhwmk.cloudfront.net/app-assets/global/default_user_icon-7a95ec473c1c41f6d020d32c0504a0ef.jpg">
				<p>First Name: <%= @user.firstname %></p>
				<p>Last Name: <%= @user.lastname %></p>
				<p>email: <%= @user.email %></p>
				<p>city: <%= @user.city %></p>
				<button class="l-button button-text margin-top-s">Edit Profile</button>
				<button class="l-button button-text margin-top-s">Delete Profile</button>
		</div>

		<div class="col-md-6 padding border-left">

			<% if @reservations.present? %>

			<h2>My Reserverations</h2>

			<% @reservations.each do |reservation| %>
				<table class="margin-top-s">
					<tr>
						<td class="cabintext">
							<h5><%= reservation.listing.title %></h5>
					    <h5><%= reservation.start_date %></h5>
							<h5><%= reservation.end_date %></h5>
					 	</td>
					 </tr>
				</table>
				<% end %>
				<% end %>


		<!-- Begin kolom Cabins -->

			<h2>My Cabins</h2>

			<button class="add_listing button-text margin-top-s"><p><%= link_to "Add a cabin", new_listing_path %><p></button>

			<% @user.listings.each do |listing| %>
			<table class="margin-top-s">
				<tr>
					<td>
				  		<%= image_tag listing.image.thumb, class: "listing-thumb"%>
					</td>
					<td class="cabintext">
					    <h5><%= listing.title %></h5>
						<h5><%= listing.location %></h5>
					    <!-- <button class="s-button">- Remove</button> -->
				 	</td>
				 </tr>
			</table>
			<% end %>

		</div>


	</div><!-- end of guest and host section -->
</section><!-- end table div -->
