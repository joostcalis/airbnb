
<body class="newuser">
  <h1> Create a new user </h1>
  <div class="postform">
    <h4>Create your account</h4>

<%= form_for(@user) do |f| %>

<div>
  <p><%= f.label :title %></p>
<%= f.text_field :title %>
</div>
<div>
  <p><%= f.label :location %></p>
<%= f.text_field :location %>
</div>
<div>
  <p><%= f.label :price %></p>
<%= f.text_field :price %>
</div>
<div>
  <p><%= f.label :description %></p>
<%= f.text_field :description %>
</div>

<div>
  <%= f.submit "Enter listing!" %>
</div>
<% end %>
</div>
</body>
